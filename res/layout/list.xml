<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ScrollView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/layoutarea">
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:id="@+id/list_menus"
			android:layout_height="wrap_content" android:padding="15dip">
			<Button android:text="@string/label_save_new_draft"
				android:id="@+id/button_save_as_new"
				android:lines="1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_plus"
				style="@style/IconButton"></Button>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
